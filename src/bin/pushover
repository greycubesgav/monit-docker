#!/bin/sh

if [ -z "${PUSHOVER_USER_KEY}" ] || [ -z "${PUSHOVER_API_TOKEN}" ]; then
  echo "Required credentials <PUSHOVER_USER_KEY|PUSHOVER_API_TOKEN"
  exit 1
fi

curl -s \
  -F "user=$PUSHOVER_USER_KEY" \
  -F "token=$PUSHOVER_API_TOKEN" \
  --form-string "message=[Monit] $MONIT_SERVICE - \
  $MONIT_DESCRIPTION" https://api.pushover.net/1/messages.json

exit $?
